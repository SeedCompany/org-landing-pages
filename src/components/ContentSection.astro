---
const { title, content, htmlContent = false } = Astro.props;
---

<section class="mb-8">
  {htmlContent ? (
    <h2 class="text-3xl mb-4" set:html={title}></h2>
  ) : (
    <h2 class="text-3xl mb-4">{title}</h2>
  )}
  
  {htmlContent ? (
    <div class="text-base leading-relaxed text-gray-700">
      <!-- Wrap content to handle potential undefined blocks -->
      <div class="content" set:html={content}></div>
      <!-- Fallback for call-to-action if not in content -->
      {content.includes("Let's translate the Bible together, church!") && (
        <h3 class="text-xl font-semibold mt-6">Let's translate the Bible together, church!</h3>
      )}
    </div>
  ) : (
    <p class="text-base">{content}</p>
  )}
</section>