---
export interface Props {
  src: string;
  poster?: string;
  alt?: string;
  autoplay?: boolean;
  loop?: boolean;
  muted?: boolean;
  controls?: boolean;
  width?: string;
  height?: string;
  class?: string;
  rounded?: boolean;
}

const {
  src,
  poster,
  alt = 'Video',
  autoplay = false,
  loop = false,
  muted = false,
  controls = true,
  width,
  height,
  class: className,
  rounded = false,
  ...rest
} = Astro.props;

// Determine if we need to wrap the video in a container for rounded corners
const shouldUseContainer = rounded;
---

{
  shouldUseContainer ? (
    <div class={`video-container rounded-container ${className || ''}`}>
      <video
        src={src}
        poster={poster}
        autoplay={autoplay}
        loop={loop}
        muted={muted}
        controls={controls}
        width={width}
        height={height}
        {...rest}
      >
        <p>
          Your browser doesn't support HTML5 video. Here is a <a href={src}>link to the video</a>{' '}
          instead.
        </p>
      </video>
    </div>
  ) : (
    <video
      src={src}
      poster={poster}
      autoplay={autoplay}
      loop={loop}
      muted={muted}
      controls={controls}
      width={width}
      height={height}
      class={className}
      {...rest}
    >
      <p>
        Your browser doesn't support HTML5 video. Here is a <a href={src}>link to the video</a>{' '}
        instead.
      </p>
    </video>
  )
}

<style>
  video {
    max-width: 100%;
    height: auto;
    display: block;
    border-radius: inherit;
  }

  .video-container {
    position: relative;
    overflow: hidden;
    line-height: 0; /* Remove extra space beneath the video */
  }

  .rounded-container {
    border-radius: 20px;
  }

  .video-container video {
    width: 100%;
    height: auto;
    display: block;
  }
</style>
