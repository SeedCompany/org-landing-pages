---
export interface Props {
  src: string;
  poster?: string;
  alt?: string;
  autoplay?: boolean;
  loop?: boolean;
  muted?: boolean;
  controls?: boolean;
  width?: string;
  height?: string;
  class?: string;
}

const {
  src,
  poster,
  alt = "Video",
  autoplay = false,
  loop = false,
  muted = false,
  controls = true,
  width,
  height,
  class: className,
  ...rest
} = Astro.props;
---

<video
  src={src}
  poster={poster}
  autoplay={autoplay}
  loop={loop}
  muted={muted}
  controls={controls}
  width={width}
  height={height}
  class={className}
  {...rest}
>
  <p>Your browser doesn't support HTML5 video. Here is a <a href={src}>link to the video</a> instead.</p>
</video>

<style>
  video {
    max-width: 100%;
    height: auto;
  }
</style>