---
import { toHTML } from '../lib/portableTextSerializer'; 

interface Props {
  faqs: Array<{
    question?: string;
    answer?: string; 
  }>;
}

const { faqs } = Astro.props;
---

<section class="py-16 md:py-24">
  <div class="container mx-auto px-4 md:px-6">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl sus-primary-heading">
        Frequently Asked Questions
      </h2>
      <p class="mt-4 text-lg text-gray-600">
        Have questions about becoming a sustainer? Find answers below.
      </p>
    </div>
    <div class="mx-auto mt-12 max-w-3xl">
      {faqs?.length ? (
        faqs.map((item, index) => (
          <details
            class="mb-4 rounded-lg border border-gray-200 bg-white p-4 shadow-sm"
            key={index}
          >
            <summary class="cursor-pointer text-lg font-medium sus-primary-text">
              {item.question || 'Question missing'}
            </summary>
            <div class="mt-2 sus-primary-text">
              {item.answer && item.answer.length ? (
                <div set:html={toHTML(item.answer)} />
              ) : (
                <p>No answer provided.</p>
              )}
            </div>
          </details>
        ))
      ) : (
        <p class="text-center sus-primary-text">No FAQs available. Please check Sanity data.</p>
      )}
    </div>
  </div>
</section>