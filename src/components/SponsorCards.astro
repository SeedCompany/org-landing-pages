---
import SponsorCard from './SponsorCard.astro';

interface Props {
  sponsors: Array<{
    name: string;
    region: string;
    gender: string;
    gtlId: string;
    focus: string;
    bio: string;
    image: any;
    isSponsored: boolean;
  }>;
}

const { sponsors } = Astro.props;
---

<div>
  <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-8">
    {sponsors.map((sponsor) => (
      <SponsorCard
        name={sponsor.name}
        region={sponsor.region}
        gender={sponsor.gender}
        gtlId={sponsor.gtlId}
        focus={sponsor.focus}
        bio={sponsor.bio}
        image={sponsor.image}
        isSponsored={sponsor.isSponsored}
      />
    ))}
  </div>
</div>