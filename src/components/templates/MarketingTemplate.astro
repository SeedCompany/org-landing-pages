---
import { sanityClient as sanity, portableText } from '~/sanity';
import type { Campaign } from '../../pages/campaigns/campaignBySlug.groq';
import Footer from '../Footer.astro';
import { Icon } from 'astro-icon/components';

interface Props {
  campaignData: Campaign;
}

const { campaignData } = Astro.props;
---

<section
  class="bg-cover bg-center"
  style={campaignData.heroImage
    ? `background-image: url(${sanity.image(campaignData.heroImage).url()});`
    : ''}
>
  <div class="w-full h-full bg-black/50 md:p-6 md:p-10 flex items-center">
    <div class="mkt-hero">
      <h1
        class="mt-10 rader-bold text-pretty mkt-primary-text w-full md:w-2/3"
        set:html={portableText.toHTML(campaignData.heading)}
      />
      <div class="prose">
        <div
          class="mkt-hero-text mt-8 text-pretty red-hat-mono"
          set:html={portableText.toHTML(campaignData.heroCopy)}
        />
      </div>
      <div class="mt-10 flex items-center gap-x-6">
        <a href={campaignData.ctaLink} class="mkt-primary-btn transition duration-300"
          >{campaignData.ctaText}</a
        >
      </div>
    </div>
  </div>
</section>
<section class="mkt-primary-bg">
  <div class="mkt-primary-content">
    <div class="prose">
      <div class="" set:html={portableText.toHTML(campaignData.body)} />
      <p class="md:pt-0 pt-10">
        Questions? Please reach out to: <a
          href={`mailto:${campaignData.contactEmail}`}
          class="mkt-secondary-accent">{campaignData.contactEmail}</a
        >
      </p>
    </div>
  </div>
</section>
<section
  class="relative isolate bg-[#CDC3B0] overflow-hidden bg-white px-6 py-24 sm:py-32 lg:overflow-visible lg:px-0"
>
  <div class="absolute inset-0 -z-10 overflow-hidden"></div>
  <div
    class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-2 lg:items-start lg:gap-y-10"
  >
    <div class="w-full">
      <div class="lg:pr-4 lg:pl-32">
        <div class="lg:max-w-lg primary-text">
          <p class="text-base/7 font-semibold mkt-accent-text">All Scripture, All People</p>
          <h2 class="mt-2 text-pretty text-4xl rader-bold font-semibold sm:text-5xl">
            About Seed Company
          </h2>
          <p class="mt-6 text-xl/8 red-hat-mono">
            Seed Company exists to bring God's Word to every language and community. Founded with a
            vision of accessibility and understanding, we build partnerships that transcend borders
            and barriers. Our collaborative approach empowers local translators with the tools they
            need to share Scripture's transformative message in ways that resonate deeply with their
            own people.
          </p>
          <p class="mt-6 red-hat-mono">
            We accelerate the work of Bible translation by connecting local field partners around
            the world with investors, resources, and training. Through these global partnerships,
            God's people are being equipped to reach communities still waiting for Scripture in the
            languages they understand best.
          </p>
          <dl class="mt-10 space-y-8 text-base/7">
            <div class="relative pl-9">
              <dt class="font-semibold primary-text">
                <Icon name={'lucide:calendar'} class="mkt-accent-text mb-2 text-2xl" />
                <dd class="order-first text-xl font-semibold rader-bold sm:text-4xl">30+ Years</dd>
                <dt class="text-lg primary-text red-hat-mono">of Bible translation.</dt>
              </dt>
            </div>
            <hr />
            <div class="relative pl-9">
              <dt class="font-semibold primary-text">
                <Icon name={'lucide:book'} class="mkt-accent-text mb-2 text-2xl" />
                <dd class="order-first text-xl font-semibold rader-bold sm:text-4xl">2,000+</dd>
                <dt class="text-lg primary-text red-hat-mono">
                  languages engaged in Bible translation.
                </dt>
              </dt>
            </div>
            <hr />
            <div class="relative pl-9">
              <dt class="font-semibold primary-text">
                <Icon name={'lucide:users'} class="mkt-accent-text mb-2 text-2xl" />
                <dd class="order-first text-xl font-semibold rader-bold sm:text-4xl">
                  2.2 billion
                </dd>
                <dt class="text-lg primary-text red-hat-mono">
                  people reached with God's Word in their language.
                </dt>
              </dt>
            </div>
          </dl>
        </div>
      </div>
      <div
        class="-ml-12 -mt-12 p-12 lg:sticky lg:top-4 lg:col-start-2 lg:row-span-2 lg:row-start-1 lg:overflow-hidden"
      >
        <img
          class="w-[36rem] max-w-none rounded-xl bg-gray-900 shadow-xl ring-1 ring-gray-400/10 sm:w-[57rem]"
          src="https://seedcompany.com/wp-content/uploads/2021/10/about-1-1024x683.jpeg"
          alt=""
        />
      </div>
    </div>
  </div>

  <Footer />

  <style>
    .btn {
      font-family: 'Inter', sans-serif;
    }
  </style>
</section>
