---
interface Props {
  step: number;
  title: string;
  description: string;
}

const { step, title, description } = Astro.props;
---

<div class="flex flex-col items-center text-center">
  <div
    class="flex h-16 w-16 items-center justify-center rounded-full sus-bg-light"
  >
    <span class="text-2xl font-bold sus-primary-heading">{step}</span>
  </div>
  <h3 class="mt-4 text-xl font-bold">{title}</h3>
  <p class="mt-2">{description}</p>
</div>