---
import BaseLayout from '~/layouts/BaseLayout.astro';
import { DonationForm } from '~/features/donate';
import { grid, stack } from 'styled-system/patterns';
import { css } from 'styled-system/css';
import { styled } from 'styled-system/jsx';
---

<BaseLayout title="Donate - Seed Company">
  <div
    class={grid({
      columns: { base: 1, md: 2 },
      gap: { base: '8', md: '12' },
      minHeight: '[100dvh]',
      alignItems: 'start',
    })}
  >
    <div class={stack({ gap: '6', p: { base: '6', md: '12' } })}>
      <styled.h1 css={{ textStyle: 'title1', fontSize: '5xl' }}>Give Monthly</styled.h1>
      <styled.p css={{ p: '2' }}>
        For every $40 you or your church invest monthly, 300 people can experience God’s Word in
        their own language—some for the very first time. Learn more about our monthly giving
        community, Canopy.
      </styled.p>
      <styled.h1 css={{ textStyle: 'title1', fontSize: '5xl' }}>Give Once</styled.h1>
      <styled.p css={{ p: '2' }}>
        Your gift accelerates the vision of all Scripture for all people, whether it launches a
        project for the first time or sees one to the finish line.
      </styled.p>
      <styled.h1 css={{ textStyle: 'title2', fontSize: '4xl' }}>LEAVE A GREATER LEGACY</styled.h1>
      <styled.p css={{ p: '2' }}>
        <a
          href="mailto:Jamie_Hanson@tsco.org"
          class={css({
            textDecoration: 'underline',
          })}
        >
          Contact our team
        </a>{' '}
        to discover how you can make a multi-year commitment as an individual, business, or church and
        partner with local translation teams around the world.
      </styled.p>
    </div>
    <div class={css({ p: { base: '6', md: '12' }, mt: { base: '8', md: '12' } })}>
      <DonationForm
        amount={{
          presets: {
            OneTime: [35, 500, 2500, 10000, 20000],
            Monthly: [25, 50, 100, 500, 1000],
          },
        }}
        client:load
      />
    </div>
  </div>
</BaseLayout>
