---
import { styled } from 'styled-system/jsx';
import Layout from '~/layouts/Layout.astro';
import { DonationForm } from '~/features/donate';
---

<Layout title="Donate - Carson">
  <styled.main css={{ m: '4', maxWidth: 'lg' }}>
    <DonationForm
      presetAmounts={{
        OneTime: [35, 500, 2500, 10_000, 20_000],
        Monthly: [25, 50, 100, 500, 1000],
      }}
      telemetry={{ referrer: 'Carson Slush Fund' }}
      client:load
    >
      <styled.div
        slot="before"
        css={{
          display: 'none',
          '[data-scope=donate-form][data-step=intro] &': { display: 'block' },
        }}
      >
        Hello World!
      </styled.div>
    </DonationForm>
  </styled.main>
</Layout>
